#!/usr/bin/python

import os
import sys
import xattr
import commands

_name = commands.getoutput('readlink -f %s' % sys.argv[0])
_path = os.path.dirname(_name)
_dir = os.path.dirname(_path)
sys.path.append(_dir)

from conf.path import PATH_MNT
from lib.operations import OP_SCAN

def usage():
    print('usage: scan [uid] [name]')

if __name__ == '__main__':
    argc = len(sys.argv)
    if argc != 3:
        usage()
        sys.exit()
    uid = sys.argv[1]
    name = sys.argv[2]
    path = os.path.join(PATH_MNT, uid, name)
    ret = xattr.getxattr(path, OP_SCAN)
    print(str(ret))
