#!/usr/bin/python

import os
import xattr

import sys
sys.path.append('..')

from lib.op import OP_SCAN
from conf.path import PATH_MOUNTPOINT

def usage():
    print('usage: scan [uid] [name]')

if __name__ == '__main__':
    argc = len(sys.argv)
    if argc != 3:
        usage()
        sys.exit()
    uid = sys.argv[1]
    name = sys.argv[2]
    path = os.path.join(PATH_MOUNTPOINT, uid, name)
    ret = xattr.getxattr(path, OP_SCAN)
    print(str(ret))
