#!/usr/bin/python

import os
import xattr

import sys
sys.path.append('..')

from lib.op import OP_POLL
from conf.path import PATH_MOUNTPOINT

def usage():
    print('usage: poll [uid]')

if __name__ == '__main__':
    argc = len(sys.argv)
    if argc != 2:
        usage()
        sys.exit()
    uid = sys.argv[1]
    path = os.path.join(PATH_MOUNTPOINT, uid)
    ret = xattr.getxattr(path, OP_POLL)
    print(str(ret))
