#!/usr/bin/python

import os
import sys
import xattr
import commands

_name = commands.getoutput('readlink -f %s' % sys.argv[0])
_path = os.path.dirname(_name)
_dir = os.path.dirname(_path)
sys.path.append(_dir)

from lib.operations import OP_DISABLE
from conf.path import PATH_MOUNTPOINT

def usage():
    print('usage: disable [uid] [name]')

if __name__ == '__main__':
    argc = len(sys.argv)
    if argc != 3:
        usage()
        sys.exit()
    uid = sys.argv[1]
    name = sys.argv[2]
    path = os.path.join(PATH_MOUNTPOINT, uid, name)
    xattr.setxattr(path, OP_DISABLE, '')
